<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb3">
    <%= form.label :title, style: "display: block", class:"form-label" %>
    <%= form.text_field :title, class:"form-control" %>
  </div>

  <div class="field mb3">
    <%= form.label :details, style: "display: block", class:"form-label" %>
    <%= form.text_field :details, class:"form-control" %>
  </div>

  <div class="field mb3">
    <% form.label :user_id, style: "display: block", class:"form-label" %>
    <%= form.number_field :user_id, value: current_user.id, type: :hidden, class:"form-control" %>
  </div>
  <br />
  <div>
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
